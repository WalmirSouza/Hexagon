@model Upd8.Web.Models.ClienteViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="card">
    <img src="~/images/logo_upd8.png" width="100" class="p-2" />
    <div class="card-body">
        <div class="p-4 border rounded">
            <h6 class="mb-0" style="color: blueviolet">Excluir Cliente</h6>
            <br />
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="CPF" class="form-label">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="cpf" required="" disabled>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="nome" required="" disabled>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="DataNascimento" class="form-label">Data Nascimento</label>
                        <input asp-for="DataNascimento" class="form-control" id="dataNascimento" required="" disabled>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Sexo" class="form-label">Sexo</label>
                        <br />
                        <input type="radio" asp-for="Sexo" value="1" checked disabled />Masculino
                        <input type="radio" asp-for="Sexo" value="2" disabled />Feminino
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Endereco" class="form-label">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="endereco" required="" disabled>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <br />
                <div class="form-group" style="float:right">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a asp-action="List" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
            <br />
        </div>
    </div>
</div>

