@model IEnumerable<Upd8.Web.Models.ClienteViewModel>

@{
    ViewData["Title"] = "List";
}


<div class="card">
    <img src="~/images/logo_upd8.png" width="100" class="p-2" />
    <div class="card-body">
        <div class="p-4 border rounded">
            <h6 class="mb-0" style="color: blueviolet">Consulta</h6>
            <br />
            <div class="table-responsive">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap5">
                    <div class="row">
                        <div class="col-sm-12 col-md-6"></div>
                        <div class="row">
                            <p>
                                <a asp-action="Create" class="btn btn-primary" style="float:right">Novo</a>
                            </p>
                            <div class="col-sm-12">
                                <table id="example2" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">
                                            <th style="width: 100px;" rowspan="1" colspan="1"></th>
                                            <th style="width: 100px;" rowspan="1" colspan="1"></th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="CPF: Ativa modo ascendente" style="width: 100.200px;">@Html.DisplayNameFor(model => model.CPF)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Nome: Ativa modo ascendente" style="width: 300.094px;">@Html.DisplayNameFor(model => model.Nome)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Data de nascimento: Ativa modo ascendente" style="width: 150.938px;">@Html.DisplayNameFor(model => model.DataNascimento)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Sexo: Ativa modo ascendente" style="width: 100.938px;">@Html.DisplayNameFor(model => model.Sexo)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Endereco: Ativa modo ascendente" style="width: 200.4688px;">@Html.DisplayNameFor(model => model.Endereco)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Cidade: Ativa modo ascendente" style="width: 150.281px;">@Html.DisplayNameFor(model => model.Cidade)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Estado: Ativa modo ascendente" style="width: 50.781px;">@Html.DisplayNameFor(model => model.Estado)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null)
                                            {
                                                @foreach (var item in Model)
                                                {
                                                    <tr role="row" class="even">
                                                        <td>
                                                            @Html.ActionLink("Editar", "Edit", new {  id=item.Id }, htmlAttributes: new { @class="btn btn-success"} )
                                                        </td>

                                                        <td>
                                                            @Html.ActionLink("Excluir","Delete",  new { id=item.Id}, htmlAttributes: new { @class="btn btn-danger"} )
                                                        </td>
                                                        <td class="sorting_1">@Html.DisplayFor(modelItem => item.CPF)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Endereco)
                                                        </td>
                                                        <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th style="width: 100px;" rowspan="1" colspan="1"></th>
                                            <th style="width: 100px;" rowspan="1" colspan="1"></th>
                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="CPF: Ativa modo ascendente" style="width: 100.200px;">@Html.DisplayNameFor(model => model.CPF)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Nome: Ativa modo ascendente" style="width: 300.094px;">@Html.DisplayNameFor(model => model.Nome)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Data de nascimento: Ativa modo ascendente" style="width: 150.938px;">@Html.DisplayNameFor(model => model.DataNascimento)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Sexo: Ativa modo ascendente" style="width: 100.938px;">@Html.DisplayNameFor(model => model.Sexo)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Endereco: Ativa modo ascendente" style="width: 200.4688px;">@Html.DisplayNameFor(model => model.Endereco)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Cidade: Ativa modo ascendente" style="width: 150.281px;">@Html.DisplayNameFor(model => model.Cidade)</th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Estado: Ativa modo ascendente" style="width: 50.781px;">@Html.DisplayNameFor(model => model.Estado)</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
